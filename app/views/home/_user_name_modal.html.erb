<div class="modal fade" id="<%= action %>Modal" tabindex="-1" aria-labelledby="<%= action %>ModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="<%= action %>ModalLabel">Como quer ser chamado?</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <%= f.text_field :user_name, class: 'form-control', placeholder: 'SEU NOME', required: true %>
            </div>
            
            <% if action == "create" %>
                <div class="modal-header">
                    <h5 class="modal-title" id="<%= action %>ModalLabel">Qual vídeo do youtube deseja compartilhar?</h5>
                </div>

                <div class="modal-body">
                    <%= f.text_field :video_url, class: 'form-control', placeholder: 'URL DO VÍDEO DO YOUTUBE', required: true %>
                </div>
            <% end %>

            <div class="modal-footer">
                <%= button_tag nil, class: 'btn btn-primary p-2' do %>
                    ACESSAR
                <% end %>
            </div>
        </div>
    </div>
</div>